<%= form_with model: @blog_post, class: "form-container" do |form| %>

  <% if form.object.errors.any? %>
    <div class="form-error-container">
      <% form.object.errors.full_messages.each do |message| %>
        <div class="alert alert-danger"> <%= message %> </div>
      <% end %>
    </div>
  <% end %>

  <div class="form-item-wrapper mb-4">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-rich_item-wrapper mb-4">
    <%= form.label :content, class: "form-label" %>
    <%= form.rich_text_area :content, class: "form-control" %>
  </div>

  <%= form.button "Submit", class: "btn btn-primary btn-block mb-4" %>
  
<% end %>
