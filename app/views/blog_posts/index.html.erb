<div class="container my-5">

  <div class="row flex d-flex gap-4">

    <% @blog_posts.each do |blog_post| %>

      <div class="">
        <div class="card h-100">

          <div class="card-body">

            <h2 class="card-title"><%= link_to blog_post.title, blog_post %></h2>

            <p class="card-text"><%= truncate(blog_post.content.to_plain_text, length: 200) %></p>

          </div>

          <div class="card-footer text-muted d-flex justify-content-between align-items-center">
            <div class="date-name">
              <%= l(blog_post.created_at, format: :long) %>
              <p><%= blog_post.user.name %></p>
            </div>
            <%= link_to "Read more", blog_post, class: "btn btn-primary" %>
          </div>

        </div>
      </div>

    <% end %>

  </div>

  <%= paginate @blog_posts, previous_label: "Previous", next_label: "Next", class: "pagination justify-content-center" %>

</div>
